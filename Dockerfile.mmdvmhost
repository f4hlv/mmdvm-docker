FROM alpine

RUN apk add --update --no-cache \
    cmake \
    make \
    git \
    g++ \
    ca-certificates \
  && rm -rf /var/cache/apk/* \
  && git clone https://github.com/g4klx/MMDVMHost.git

WORKDIR /MMDVMHost
RUN make \
&& cp MMDVMHost /usr/local/bin

RUN mkdir /var/log/mmdvmhost

VOLUME /MMDVMHost
VOLUME /var/log/mmdvmhost

WORKDIR /MMDVMHost

CMD ["MMDVMHost", "/MMDVMHost/MMDVM.ini"]

