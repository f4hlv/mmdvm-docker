FROM alpine

RUN apk add --update --no-cache \
    cmake \
    make \
    git \
    g++ \
    ca-certificates \
  && rm -rf /var/cache/apk/* \
  && git clone https://github.com/g4klx/MMDVMHost.git \

WORKDIR /MMDVMHost
RUN make

VOLUME /MMDVMHost

WORKDIR /MMDVMHost

CMD ["/MMDVMHost/MMDVMHost", "/MMDVMHost/MMDVM.ini"]
